    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) debug ctest",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/debug/library_tests",
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "cpimage (lldb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/debug/cpimage",
            "args": [
                "IMG_732*.cr2"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "cpimage -h (lldb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/debug/cpimage",
            "args": [
                "-h"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "lscamera (lldb) Launch with -f",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/debug/lscamera",
            "args": [
                "-f"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        }
